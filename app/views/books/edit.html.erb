 <h1>Editing Book</h1>
  <%= form_for @book, url: books_path(@book) do |f| %>
    <h4>Title</h4>
	<%= f.text_field :title, class: "book_title" %>
	<h4>Body</h4>
	<%= f.text_area :body, class: "book_body"  %>
	<%= f.submit 'Update Book'%>
 <% end %>

 <p>
	<%= link_to "Show", show_path(@book.id), class: "show_#{@book.id}" %> 
	|
 	<%= link_to "Back", index_path, class: "back" %> 
 </p>